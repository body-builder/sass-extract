{
  "name": "sass-extract",
  "version": "2.1.0",
  "description": "Extract structured variables from sass files. Fast and accurate.",
  "main": "lib/index.js",
  "scripts": {
    "peers": "npx npm-install-peers",
    "compile": "babel -d lib/ src/",
    "lint": "eslint --ext=js src,test",
    "prepublish": "npm run compile",
    "test": "jest --testTimeout 10000",
    "test:fast": "FAST_TEST=true jest",
    "changelog": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "watch": "jest --watch --testTimeout 10000",
    "watch:fast": "FAST_TEST=true jest --watch"
  },
  "repository": "jgranstrom/sass-extract",
  "author": "John Granstr√∂m <granstrom.john@gmail.com>",
  "keywords": [
    "sass",
    "scss",
    "variables",
    "convert",
    "extract",
    "import",
    "json"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=4"
  },
  "peerDependencies": {
    "node-sass": "^3.8.0 || 4"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "gonzales-pe": "^4.2.4",
    "parse-color": "^1.0.0",
    "query-ast": "^1.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "babel-jest": "^26.6.3",
    "babel-polyfill": "^6.26.0",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "foundation-sites": "6.4.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./test/helpers/matchers.js",
      "babel-polyfill"
    ]
  },
  "lint-staged": {
    "*.{js,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}
